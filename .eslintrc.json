{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "globals": {
        "describe": true,
        "it": true
      },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "class-methods-use-this": "off",
        "arrow-parens": "off",
        "prefer-arrow-callback": "off",
        "func-names": "off",
        "object-curly-newline": "off",
        "import/extensions": ["error", "always", {
            ".js": "never"
    }]
}
}
